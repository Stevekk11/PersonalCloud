@page
@model ChangeUsernameModel
@{
    ViewData["Title"] = "Change Username";
    ViewData["ActivePage"] = ManageNavPages.ChangeUsername;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
    <div class="col-md-6">
        <form id="change-username-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.CurrentUsername" class="form-control" disabled />
                <label asp-for="Input.CurrentUsername" class="form-label"></label>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.NewUsername" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.NewUsername" class="form-label"></label>
                <span asp-validation-for="Input.NewUsername" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Update Username</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
