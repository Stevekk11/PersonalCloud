@model PersonalCloud.Models.HomeDashboardViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Home Page"];
}

<div class="text-center mb-4">
    <h1 class="display-4">
        @Localizer["Vítejte, {0}", Model?.UserDisplayName ?? (User.Identity?.Name ?? "uživateli")]
    </h1>
    <h2 class="text-warning text-lg-center">@Localizer["Toto je demo verze cloudového úložiště"]</h2>
</div>

@if (User.Identity?.IsAuthenticated == true)
{
    <div class="container">
        <div class="row g-3">
            <div class="col-12 col-md-6 col-lg-3">
                <div class="card h-100 shadow-sm">
                    <div class="card-header bg-primary text-white">
                        @Localizer["Poslední nahraný soubor"]
                    </div>
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(Model?.LatestFileName))
                        {
                            <h5 class="card-title text-truncate" title="@Model.LatestFileName">@Model.LatestFileName</h5>
                            @if (Model.LatestFileUploadedAt.HasValue)
                            {
                                <p class="card-text text-muted mb-0">
                                    @Localizer["Nahráno:"] @Model.LatestFileUploadedAt.Value.ToLocalTime().ToString("g")
                                </p>
                            }
                        }
                        else
                        {
                            <p class="card-text text-muted mb-0">@Localizer["Zatím jste nenahráli žádný soubor."]</p>
                        }
                    </div>
                </div>
            </div>

            <div class="col-12 col-md-6 col-lg-3">
                <div class="card h-100 shadow-sm">
                    <div class="card-header bg-secondary text-white">
                        @Localizer["Poslední přihlášení"]
                    </div>
                    <div class="card-body">
                        @if (Model?.LastLoginTime != null)
                        {
                            <p class="card-text mb-0">@Model.LastLoginTime.Value.ToLocalTime().ToString("g")</p>
                        }
                        else
                        {
                            <p class="card-text text-muted mb-0">@Localizer["Informace o posledním přihlášení není k dispozici."]</p>
                        }
                    </div>
                </div>
            </div>

            <div class="col-12 col-md-6 col-lg-3">
                <div class="card h-100 shadow-sm">
                    <div class="card-header bg-info text-white">
                        @Localizer["Typ účtu"]
                    </div>
                    <div class="card-body d-flex flex-column justify-content-center">
                        <h5 class="card-title mb-0">
                            @if (Model?.IsPremium == true)
                            {
                                <span class="badge bg-success">@Localizer["Premium"]</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">@Localizer["Free"]</span>
                            }
                        </h5>
                    </div>
                </div>
            </div>

            <div class="col-12 col-md-6 col-lg-3">
                <div class="card h-100 shadow-sm">
                    <div class="card-header bg-dark text-white">
                        @Localizer["Aktuální čas"]
                    </div>
                    <div class="card-body d-flex flex-column justify-content-center">
                        <h5 class="card-title mb-0">
                            @Model?.ServerTimeUtc.ToLocalTime().ToString("F")
                        </h5>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-12 col-md-6 col-lg-4 mx-auto">
                <div class="card h-100 shadow-sm border-success">
                    <div class="card-header bg-success text-white">
                        @Localizer["Vlhkost a teplota v serverovně"]
                    </div>
                    <div class="card-body d-flex flex-column justify-content-center">
                        <form asp-action="ChangeComPort" method="post" class="mb-2">
                            <div class="input-group">
                                <select name="comPort" class="form-select" style="max-width: 150px;">
                                    @foreach (var port in Model.AvailableComPorts)
                                    {
                                        <option value="@port" selected="@(port == Model.SelectedComPort ? "selected" : null)">@port</option>
                                    }
                                </select>
                                <button type="submit" class="btn btn-outline-primary">@Localizer["Změnit port"]</button>
                            </div>
                        </form>
                        <form asp-action="RetrySensor" method="post" class="d-flex align-items-center gap-2">
                            <input type="hidden" name="comPort" value="@Model.SelectedComPort" />
                            <button type="submit" class="btn btn-outline-warning">
                                <i class="bi bi-arrow-repeat"></i> Retry
                            </button>
                        </form>

                        <h5 class="card-title mb-2">
                            @if (Model?.SensorError != null)
                            {
                                <span class="text-danger">@Localizer["Chyba senzoru:"] @Model.SensorError</span>
                            }
                            else if (Model?.ServerTemperature != null && Model?.ServerHumidity != null)
                            {
                                <span class="me-3">
                                    <i class="bi bi-thermometer-half"></i> @Localizer["Teplota:"] @Model.ServerTemperature.Value.ToString("F1") °C
                                </span>
                                <span>
                                    <i class="bi bi-droplet-half"></i> @Localizer["Vlhkost:"] @Model.ServerHumidity.Value.ToString("F1") %
                                </span>
                            }
                            else
                            {
                                <span class="text-muted">@Localizer["Data ze senzoru nejsou dostupná."]</span>
                            }
                        </h5>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container mt-4">
        <div class="alert alert-info" role="alert">
            @Localizer["Přihlaste se, abyste viděli svůj osobní dashboard."]
        </div>
    </div>
}
