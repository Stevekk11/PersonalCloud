@model PersonalCloud.Models.HomeDashboardViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@{
    ViewData["Title"] = Localizer["Home Page"];
}

<div class="text-center mb-4">
    <h1 class="display-4">
        @Localizer["Vítejte, {0}", Model?.UserDisplayName ?? (User.Identity?.Name ?? "uživateli")]
    </h1>
    <h2 class="text-warning text-lg-center">@Localizer["Dobrý den"]</h2>
</div>

@if (User.Identity?.IsAuthenticated == true)
{
    <div class="container">
        <div class="row g-3">
            <div class="col-12 col-md-6 col-lg-3">
                <div class="card h-100 shadow-sm">
                    <div class="card-header bg-primary text-white">
                        @Localizer["Poslední nahraný soubor"]
                    </div>
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(Model?.LatestFileName))
                        {
                            <h5 class="card-title text-truncate" title="@Model.LatestFileName">@Model.LatestFileName</h5>
                            @if (Model.LatestFileUploadedAt.HasValue)
                            {
                                <p class="card-text text-muted mb-0">
                                    @Localizer["Nahráno:"] @Model.LatestFileUploadedAt.Value.ToLocalTime().ToString("g")
                                </p>
                            }
                        }
                        else
                        {
                            <p class="card-text text-muted mb-0">@Localizer["Zatím jste nenahráli žádný soubor."]</p>
                        }
                    </div>
                </div>
            </div>

            <div class="col-12 col-md-6 col-lg-3">
                <div class="card h-100 shadow-sm">
                    <div class="card-header bg-secondary text-white">
                        @Localizer["Poslední přihlášení"]
                    </div>
                    <div class="card-body">
                        @if (Model?.LastLoginTime != null)
                        {
                            <p class="card-text mb-0">@Model.LastLoginTime.Value.ToLocalTime().ToString("g")</p>
                        }
                        else
                        {
                            <p class="card-text text-muted mb-0">@Localizer["Informace o posledním přihlášení není k dispozici."]</p>
                        }
                    </div>
                </div>
            </div>

            <div class="col-12 col-md-6 col-lg-3">
                <div class="card h-100 shadow-sm">
                    <div class="card-header bg-info text-white">
                        @Localizer["Typ účtu"]
                    </div>
                    <div class="card-body d-flex flex-column justify-content-center">
                        <h5 class="card-title mb-0">
                            @if (Model?.IsPremium == true)
                            {
                                <span class="badge bg-success">@Localizer["Premium"]</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">@Localizer["Free"]</span>
                            }
                        </h5>
                    </div>
                </div>
            </div>

            <div class="col-12 col-md-6 col-lg-3">
                <div class="card h-100 shadow-sm">
                    <div class="card-header bg-dark text-white">
                        @Localizer["Aktuální čas"]
                    </div>
                    <div class="card-body d-flex flex-column justify-content-center">
                        <h5 class="card-title mb-0" id="currentTime">
                            @Model?.ServerTimeUtc.ToLocalTime().ToString("F")
                        </h5>
                    </div>
                </div>
            </div>

            <div class="col-12 col-md-6 col-lg-3">
                <div class="card h-100 shadow-sm">
                    <div class="card-header bg-success text-white">
                        @Localizer["Teplota a Vlhkost"]
                    </div>
                    <div class="card-body d-flex flex-column justify-content-center">
                        <p class="card-text mb-1" style="@(Model?.Temperature.HasValue == true ? "" : "display: none")">
                            <strong>@Localizer["Teplota:"]</strong> <span id="temperature">@(Model?.Temperature?.ToString("F1") ?? "")</span>°C
                        </p>
                        <p class="card-text mb-0" style="@(Model?.Humidity.HasValue == true ? "" : "display: none")">
                            <strong>@Localizer["Vlhkost:"]</strong> <span id="humidity">@(Model?.Humidity?.ToString("F1") ?? "")</span>%
                        </p>
                        <p class="card-text text-muted mb-0" id="sensorDataUnavailable" style="@(Model?.Temperature.HasValue == true && Model?.Humidity.HasValue == true ? "display: none" : "")">@Localizer["Data nejsou k dispozici"]</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container mt-4">
        <div class="alert alert-info" role="alert">
            @Localizer["Přihlaste se, abyste viděli svůj osobní dashboard."]
        </div>
    </div>
}

@section Scripts {
    <script>
        function updateCurrentTime() {
            const el = document.getElementById('currentTime');
            if (el) {
                const now = new Date();
                el.textContent = now.toLocaleString('cs-CZ', {
                    weekday: 'long', year: 'numeric', month: 'long', day: 'numeric',
                    hour: '2-digit', minute: '2-digit', second: '2-digit'
                });
            }
        }
        setInterval(updateCurrentTime, 1000);
        updateCurrentTime();

        async function updateSensorData() {
            try {
                const response = await fetch('/Home/GetSensorData');
                if (response.ok) {
                    const data = await response.json();
                    const tempEl = document.getElementById('temperature');
                    const humEl = document.getElementById('humidity');
                    const unavailableEl = document.getElementById('sensorDataUnavailable');
                    if (data.temperature !== null && data.humidity !== null) {
                        if (tempEl && humEl) {
                            tempEl.textContent = data.temperature.toFixed(1);
                            humEl.textContent = data.humidity.toFixed(1);
                            tempEl.parentElement.style.display = 'block';
                            humEl.parentElement.style.display = 'block';
                        }
                        if (unavailableEl) {
                            unavailableEl.style.display = 'none';
                        }
                    } else {
                        if (tempEl && humEl) {
                            tempEl.parentElement.style.display = 'none';
                            humEl.parentElement.style.display = 'none';
                        }
                        if (unavailableEl) {
                            unavailableEl.style.display = 'block';
                        }
                    }
                }
            } catch (error) {
                console.error('Error fetching sensor data:', error);
            }
        }
        setInterval(updateSensorData, 10000); // Update every 10 seconds
        // Initial update after page load
        setTimeout(updateSensorData, 1000);
    </script>
}
